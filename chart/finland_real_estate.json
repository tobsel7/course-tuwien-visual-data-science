{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "config": {
    "font": "Inter",
    "view": {"stroke": null},
    "title": {"fontSize": 14, "fontWeight": 600, "anchor": "start", "offset": 10}
  },
  "data": {"url": "data/preprocessed/real_estate_fin_province.csv"},
  "spacing": 40,
  "hconcat": [
    {
      "title": "Real Price Index",
      "width": 180,
      "height": 250,
      "mark": {"type": "line", "point": true},
      "encoding": {
        "x": {"field": "Year", "type": "quantitative", "axis": {"format": "d", "tickCount": 5}},
        "y": {"field": "Real price index", "type": "quantitative"},
        "color": {
          "field": "Province",
          "type": "nominal",
          "scale": {
            "domain": ["Southern Finland", "Western Finland", "Northern Finland", "Eastern Finland"],
            "range": ["#1f77b4", "#ff7f0e", "#2ca02c", "#d62728"]
          }
        }
      }
    },
    {
      "title": "Number of Transactions",
      "width": 180,
      "height": 250,
      "mark": "bar",
      "encoding": {
        "x": {"field": "Year", "type": "quantitative", "axis": {"format": "d", "tickCount": 5}},
        "y": {"field": "Number", "type": "quantitative", "title": "Transactions"},
        "color": {
          "field": "Province",
          "type": "nominal",
          "scale": {
            "domain": ["Southern Finland", "Western Finland", "Northern Finland", "Eastern Finland"],
            "range": ["#1f77b4", "#ff7f0e", "#2ca02c", "#d62728"]
          },
          "legend": {"title": null, "orient": "right"}
        }
      }
    }
  ],
  "resolve": {
    "scale": {"color": "shared"}
  }
}