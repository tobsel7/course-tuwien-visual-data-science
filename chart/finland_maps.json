{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "padding": {"bottom": 20},
  "autosize": {"type": "fit-x", "contains": "padding"},
  "params": [
    {
      "name": "selectYear",
      "value": 2024,
      "bind": {
        "input": "range",
        "min": 1990,
        "max": 2024,
        "step": 1,
        "name": "Year: "
      }
    },
    {
      "name": "selectVar",
      "value": "Swedish speakers",
      "bind": {
        "input": "select",
        "options": [
          "Swedish speakers",
          "Finnish speakers",
          "Foreign-language speakers",
          "Sami speakers",
          "Population 31 Dec",
          "Average age, both sexes",
          "Citizens of foreign countries",
          "Demographic dependency ratio",
          "Economic dependency ratio",
          "Land area, kmÂ²",
          "Persons born abroad",
          "Persons with foreign background",
          "Share of persons aged 15 to 64, %",
          "Share of persons aged 65 or over, %",
          "Share of persons aged under 15, %"
        ],
        "name": "Indicator: "
      }
    }
  ],
  "data": {
    "url": "data/preprocessed/population_fin_region.csv"
  },
  "transform": [
    {
      "filter": "datum.Year == selectYear"
    },
    {
      "calculate": "datum[selectVar]",
      "as": "selected_value"
    },
    {
      "lookup": "Region",
      "from": {
        "data": {
          "url": "data/preprocessed/map_fin_region.json",
          "format": {"type": "topojson", "feature": "data"}
        },
        "key": "properties.name"
      },
      "as": "geo"
    }
  ],
  "projection": {
    "type": "identity",
    "reflectY": true
  },
  "mark": {
    "type": "geoshape",
    "stroke": "white",
    "strokeWidth": 0.5
  },
  "encoding": {
    "shape": {"field": "geo", "type": "geojson"},
    "color": {
      "field": "selected_value",
      "type": "quantitative",
      "scale": {"scheme": "blues"},
      "legend": {
        "title": {"signal": "selectVar"},
        "titleLimit": 0,
        "orient": "bottom",
        "direction": "horizontal",
        "gradientLength": 500
      }
    },
    "tooltip": [
      {"field": "Region", "type": "nominal"},
      {"field": "Year", "type": "quantitative"},
      {
        "field": "selected_value",
        "type": "quantitative",
        "title": "Indicator",
        "format": ",.0f"
      }
    ]
  }
}